---
interface Props {
    title: string;
    description: string;
    buttonText: string;
}

const { title, description, buttonText } = Astro.props;
---

<div class="mt-12">
    <div class="bg-gradient-to-r from-green-600 to-green-400 rounded-xl p-8 text-center">
        <h2 class="text-3xl font-bold text-white mb-4">{title}</h2>
        <p class="text-white/90 mb-6">{description}</p>
        <a href="/contact" class="inline-block bg-white text-green-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
            {buttonText}
        </a>
    </div>
</div>
