---
import Card from "./Card.astro";

const { list, title } = Astro.props;
---
<div class="">
  <!-- Slider Container -->
  <h2 class="text-2xl text-gray-900 dark:text-white font-bold mb-3">{title}</h2>
  <div class="flex flex-row overflow-x-auto gap-4 py-5 snap-x snap-mandatory scrollbar-hide">
    <!-- Slides -->
    {
      list.map((item) => (
          <Card
            title={item.title}
            image={item.image}
            body={item.body}
            whatsapp={item.whatsapp}
          />
      ))
    }
  </div>
</div>

<style>
/* show beautiful scrollbar */
.flex-row::-webkit-scrollbar {
  height: 8px;
}

.flex-row::-webkit-scrollbar-track {
  background: #f1f1f1;
  border-radius: 10px;
}

.flex-row::-webkit-scrollbar-thumb {
  background: #888;
  border-radius: 10px;
}

.flex-row::-webkit-scrollbar-thumb:hover {
  background: #555;
}
</style>
