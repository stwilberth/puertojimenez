---
interface Props {
  title: string;
  body: string;
  href?: string;
  image?: string;
  whatsapp?: string;
}

const {
  href,
  title,
  body,
  image = "/images/default.jpg",
  whatsapp
} = Astro.props;
---

<div
  class="relative min-w-[300px] md:min-w-[400px] bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg shadow-lg overflow-hidden transition-all duration-300 transform hover:scale-105"
>
  {
    image && (
      <img
        src={image}
        alt={title}
        class="object-cover w-full h-48"
      />
    )
  }

  <div class="p-4">
    <a href={href}>
      <h3 class="mb-4 text-lg font-bold tracking-tight text-gray-900 dark:text-white">
        {title}
      </h3>
    </a>
    <p class="mb-4 font-normal text-sm md:text-base text-gray-600 dark:text-gray-300">
      {body}
    </p>
    {
      whatsapp && (
        <a
          href={`https://wa.me/${whatsapp}`}
          class="absolute bottom-4 right-4 inline-flex items-center px-3 py-2 text-xs font-medium text-white bg-green-600 rounded-lg hover:bg-green-700 focus:ring-4 focus:outline-none focus:ring-green-800 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800"
        >
          <span>WhatsApp</span>
        </a>
      )
    }
  </div>
</div>
