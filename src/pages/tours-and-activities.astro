---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Tours & Activities in Puerto Jimenez">
    <main class="container mx-auto px-4 py-8">
        <h1 class="text-4xl font-bold mb-8 text-center">Tours & Activities</h1>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Corcovado National Park -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-2xl font-semibold mb-4">Corcovado National Park Hikes</h2>
                <p class="text-gray-700 mb-4">
                    Explore one of the most biologically intense places on Earth with guided hiking tours through Corcovado National Park.
                </p>
                <!-- Tour details to be added -->
            </div>

            <!-- Non-Corcovado Hikes -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-2xl font-semibold mb-4">Local Trail Hikes</h2>
                <p class="text-gray-700 mb-4">
                    Discover the natural beauty around Puerto Jimenez with guided hikes outside Corcovado National Park.
                </p>
                <!-- Trail details to be added -->
            </div>

            <!-- Kayak Tours -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-2xl font-semibold mb-4">Kayak Tours</h2>
                <p class="text-gray-700 mb-4">
                    Paddle through mangroves and coastal waters while observing local wildlife and marine life.
                </p>
                <!-- Kayak tour details to be added -->
            </div>

            <!-- Canopy Tours -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-2xl font-semibold mb-4">Canopy Tours</h2>
                <p class="text-gray-700 mb-4">
                    Experience the rainforest from above with exciting zip-line adventures through the canopy.
                </p>
                <!-- Canopy tour details to be added -->
            </div>

            <!-- Gold Tours -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-2xl font-semibold mb-4">Gold Tours</h2>
                <p class="text-gray-700 mb-4">
                    Learn about the region's gold panning history and try your luck finding gold in local rivers.
                </p>
                <!-- Gold tour details to be added -->
            </div>
        </div>

        <!-- Freelance Guides Section -->
        <div class="mt-12">
            <h2 class="text-3xl font-semibold mb-6">Local Expert Guides</h2>
            <div class="grid md:grid-cols-3 lg:grid-cols-4 gap-6">
                {[
                    { name: "Jairi", specialty: "Photography Tours" },
                    { name: "Tomas", specialty: "Nature Guide" },
                    { name: "Gabriel", specialty: "Local Expert" }
                    // Additional guides to be added
                ].map(guide => (
                    <div class="bg-white rounded-lg shadow-md p-4">
                        <h3 class="text-xl font-medium mb-2">{guide.name}</h3>
                        <p class="text-gray-600">{guide.specialty}</p>
                        <!-- Contact information to be added -->
                    </div>
                ))}
            </div>
        </div>

        <!-- Local Artisans Section -->
        <div class="mt-12">
            <h2 class="text-3xl font-semibold mb-6">Local Artisans & Souvenirs</h2>
            <div class="grid md:grid-cols-3 lg:grid-cols-4 gap-6">
                {[
                    { name: "Manuel Bianco", craft: "Traditional Crafts" },
                    { name: "Juan Carlos", craft: "Local Artistry" },
                    { name: "Hubert", craft: "Handmade Souvenirs" },
                    { name: "Coco", craft: "Local Crafts" },
                    { name: "Pica Piedra", craft: "Stone Work" },
                    { name: "Claudia Mariposa", craft: "Butterfly Inspired Art" }
                ].map(artisan => (
                    <div class="bg-white rounded-lg shadow-md p-4">
                        <h3 class="text-xl font-medium mb-2">{artisan.name}</h3>
                        <p class="text-gray-600">{artisan.specialty}</p>
                        <!-- Contact information and location to be added -->
                    </div>
                ))}
            </div>
        </div>
    </main>
</Layout>
