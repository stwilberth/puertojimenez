---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Where to Stay & Eat in Puerto Jimenez">
    <main class="container mx-auto px-4 py-8">
        <h1 class="text-4xl font-bold mb-8 text-center">Accommodations & Dining</h1>

        <div class="grid md:grid-cols-2 gap-8">
            <!-- Accommodations Section -->
            <div class="space-y-6">
                <h2 class="text-3xl font-semibold">Where to Stay</h2>
                
                <div class="bg-white rounded-lg shadow-md p-6">
                    <h3 class="text-xl font-medium mb-4">Find Your Perfect Stay</h3>
                    <p class="text-gray-700 mb-4">
                        Puerto Jimenez offers a range of accommodations to suit every budget and preference.
                    </p>
                    
                    <div class="space-y-4">
                        <div class="flex items-center justify-between p-4 bg-gray-50 rounded-md">
                            <span>Budget Options</span>
                            <span class="text-green-600">$</span>
                        </div>
                        <div class="flex items-center justify-between p-4 bg-gray-50 rounded-md">
                            <span>Mid-Range Hotels</span>
                            <span class="text-green-600">$$</span>
                        </div>
                        <div class="flex items-center justify-between p-4 bg-gray-50 rounded-md">
                            <span>Luxury Resorts</span>
                            <span class="text-green-600">$$$</span>
                        </div>
                    </div>

                    <a href="https://www.booking.com/searchresults.html?ss=Puerto+Jimenez" 
                       target="_blank" 
                       rel="noopener noreferrer"
                       class="inline-block mt-6 px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                        Search on Booking.com
                    </a>
                </div>
            </div>

            <!-- Restaurants Section -->
            <div class="space-y-6">
                <h2 class="text-3xl font-semibold">Where to Eat</h2>
                
                <div class="bg-white rounded-lg shadow-md p-6">
                    <h3 class="text-xl font-medium mb-4">Local Dining Options</h3>
                    <p class="text-gray-700 mb-4">
                        Experience the local flavors and cuisine of Puerto Jimenez, from casual eateries to fine dining establishments.
                    </p>
                    
                    <div class="space-y-4">
                        <div class="p-4 bg-gray-50 rounded-md">
                            <h4 class="font-medium">Budget-Friendly Options</h4>
                            <p class="text-gray-600">Local sodas and traditional Costa Rican cuisine</p>
                        </div>
                        
                        <div class="p-4 bg-gray-50 rounded-md">
                            <h4 class="font-medium">Mid-Range Restaurants</h4>
                            <p class="text-gray-600">International cuisine and seafood restaurants</p>
                        </div>
                        
                        <div class="p-4 bg-gray-50 rounded-md">
                            <h4 class="font-medium">Premium Dining</h4>
                            <p class="text-gray-600">Fine dining experiences and specialty restaurants</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</Layout>
