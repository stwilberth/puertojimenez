---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import ContainerFluid from '../components/ContainerFluid.astro';
import CallToAction from '../components/CallToAction.astro';

---

<Layout title="Accommodation in Puerto Jiménez">
    <main>
        <Nav />
        <ContainerFluid>
            <section class="max-w-4xl mx-auto py-8">
                <h1 class="text-4xl font-bold text-gray-800 dark:text-white mb-8">Where to Stay in Puerto Jiménez</h1>
                
                <div class="space-y-12">
                    <!-- Hotels -->
                    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden">
                        <div class="p-6">
                            <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">Hotels</h2>
                            <p class="text-gray-600 dark:text-gray-400 mb-4">
                                From luxury eco-lodges to comfortable budget hotels, Puerto Jiménez offers accommodation options for every traveler.
                            </p>
                            <div class="grid md:grid-cols-2 gap-6">
                                <div class="space-y-4">
                                    <h3 class="text-xl font-semibold text-gray-800 dark:text-white">Luxury & Mid-Range</h3>
                                    <ul class="list-disc list-inside text-gray-600 dark:text-gray-400">
                                        <li>Iguana Lodge</li>
                                        <li>Lapa Rios Lodge</li>
                                        <li>Poor Man's Paradise</li>
                                        <li>Agua Dulce Resort</li>
                                    </ul>
                                </div>
                                <div class="space-y-4">
                                    <h3 class="text-xl font-semibold text-gray-800 dark:text-white">Budget-Friendly</h3>
                                    <ul class="list-disc list-inside text-gray-600 dark:text-gray-400">
                                        <li>Cabinas Jiménez</li>
                                        <li>La Chosa del Manglar</li>
                                        <li>Cabinas Puerto Jiménez</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Hostels & Camping -->
                    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden">
                        <div class="p-6">
                            <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">Hostels & Camping</h2>
                            <p class="text-gray-600 dark:text-gray-400 mb-4">
                                For adventurous travelers and backpackers, there are several budget-friendly options available.
                            </p>
                            <div class="space-y-4">
                                <h3 class="text-xl font-semibold text-gray-800 dark:text-white">Popular Options</h3>
                                <ul class="list-disc list-inside text-gray-600 dark:text-gray-400">
                                    <li>Bolita Hostel</li>
                                    <li>Corcovado Wild Hostel</li>
                                    <li>Camping at Martina's Place</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- Vacation Rentals -->
                    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden">
                        <div class="p-6">
                            <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">Vacation Rentals</h2>
                            <p class="text-gray-600 dark:text-gray-400 mb-4">
                                For a more home-like experience, consider renting a house or apartment during your stay.
                            </p>
                            <div class="space-y-4">
                                <h3 class="text-xl font-semibold text-gray-800 dark:text-white">Types of Rentals</h3>
                                <ul class="list-disc list-inside text-gray-600 dark:text-gray-400">
                                    <li>Beach Houses</li>
                                    <li>Jungle Cabins</li>
                                    <li>Town Apartments</li>
                                    <li>Eco Lodges</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <CallToAction 
                    title="Find Your Perfect Stay"
                    description="Book your dream accommodation in Puerto Jiménez today"
                    buttonText="Book Now"
                />
            </section>
        </ContainerFluid>
    </main>
</Layout>
